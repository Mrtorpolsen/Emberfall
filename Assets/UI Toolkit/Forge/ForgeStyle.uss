    max-height: 320px;
    padding-top: 25px;
    padding-right: 25px;
    padding-bottom: 25px;
    padding-left: 25px;
    background-color: rgba(0, 0, 0, 0);
    max-width: 320px;
}

.imgUnit {
    flex-grow: 1;
}

.btnUpg {
    max-height: 160px;
