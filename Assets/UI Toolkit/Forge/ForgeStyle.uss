    flex-wrap: wrap;
    max-height: 100%;
    height: auto;
}

.unitContainer {
    margin-bottom: 25px;
    width: 30%;
}

.imgContainer {
    height: 320px;
    background-image: url("project://database/Assets/Art/UI/Backgrounds/btn_background.png?fileID=4483057878667240538&guid=e46f4d1555b939a4fb2be68a1c04b813&type=3#New Button_0");
